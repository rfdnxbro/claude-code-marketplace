{
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "prompt",
            "prompt": "ドキュメント整合性チェック。今回の変更に関連するREADME/CLAUDE.mdを確認し、不一致があれば報告。問題なければ「✓ ドキュメント整合性OK」とだけ出力。",
            "timeout": 120
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PROJECT_DIR}/scripts/validate_plugin.py",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
